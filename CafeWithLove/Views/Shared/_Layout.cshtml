            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">KM <span class="caret"></span></button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
            </div>
            <hr />
        </div>
    </div>
    <div class="container body-content">
        <div class="container col-md-12">
            <div class="col-md-9">
                @RenderBody()   <!-- PAGE CONTENT HERE-->
            </div>
            <!-- POPULAR SEARCHES -->
            <div class="col-md-3">
                <h4 class="no-top-margin">Popular Searches</h4>
                <div class="list-group">
                    <a href="#" class="list-group-item">facilisis in</a>
                    <a href="#" class="list-group-item">Dapibus ac facilisis in</a>
