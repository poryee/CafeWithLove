                    <a href="#" class="list-group-item">facilisis in</a>
                </div>
            </div>
        </div>

        <hr />
        <footer>
            <h6>ABOUT CAFE WITH L💗VE</h6>
            <div class="footer-border">
                <span class="pull-left">
                    Copyright&copy; @DateTime.Now.Year - CAFE WITH L💗VE
                </span>
                <span class="pull-right col-md-3">
                    <a href="#" class="col-md-offset-2 col-md-4">Help</a>
                    <a href="#" class="col-md-6">Contact Us</a>
                </span>
            </div>
        </footer>
        <!-- LOGIN MODAL-->
        <div class="modal fade" id="loginModal">
            <div class="modal-dialog">
                <div class="modal-content" style="text-align: center;">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">CAFE WITH L💗VE</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-8 col-md-offset-2">
                            <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Login with Facebook</button>
                            <div class="login-or">
                                <hr class="hr-or">
                                <span class="span-or">or</span>
                            </div>
                            <input type="email" name="cpf" placeholder="Email" required class="form-control input-lg" value="" /> <br />
                            <input type="password" class="form-control input-lg" id="password" placeholder="Password" required="" /> <br />
                            <div class="pwstrength_viewport_progress"></div>
                            <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Login</button>
                            <div>
                                <a href="#">Register for a new account</a>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
