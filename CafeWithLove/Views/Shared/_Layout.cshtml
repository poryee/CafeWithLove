                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li><a href="#" data-toggle="modal" data-target="#loginModal">Log in</a></li>
                    <li>@Html.ActionLink("Sign Up", "Index", "Home")</li>
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="col-md-6">
                <div class="form-search search-only">
                    <i class="search-icon glyphicon glyphicon-search"></i>
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                    {
                        @Html.TextBox("searchInput", null, new { @class = "form-control", @placeholder="Search for a cafe.." })
                    }
                </div>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Price <span class="caret"></span></button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
