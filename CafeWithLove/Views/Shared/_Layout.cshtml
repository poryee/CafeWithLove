<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <!--Start of facebook javascript SDK-->
    <div id="fb-root"></div>
    <script>
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=563313847156850";
     fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <!--End of facebook javascript SDK-->
    <nav class="navbar navbar-default ">
        <!-- dummy navbar to ensure body contents are not hidden by navbar-->
    </nav>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container col-md-12">
            <div class="navbar-header col-md-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CAFE WITH L💗VE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Top 10", "TopTen", "CafeDetails")</li>
                    <li>@Html.ActionLink("Browse All Cafes", "Index", "CafeDetails")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Price <b class="caret"></b></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("$", "PFilter", "CafeDetails", new { chosen = "1" },null)</li>
                            <li>@Html.ActionLink("$$", "PFilter", "CafeDetails", new { chosen = "2" }, null)</li>
                            <li>@Html.ActionLink("$$$", "PFilter", "CafeDetails", new { chosen = "3" }, null)</li>
                            <li>@Html.ActionLink("$$$$", "PFilter", "CafeDetails", new { chosen = "4" }, null)</li>
                            <li>@Html.ActionLink("$$$$$", "PFilter", "CafeDetails", new { chosen = "5" }, null)</li>

                        </ul>
                    </li>

                    @{Html.RenderAction("_RandomCategory", "CafeDetails"); }

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Estates <b class="caret"></b></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("North", "RFilter", "CafeDetails", new { chosen = "north" }, null)</li>
                            <li>@Html.ActionLink("South", "RFilter", "CafeDetails", new { chosen = "south" }, null)</li>
                            <li>@Html.ActionLink("East", "RFilter", "CafeDetails", new { chosen = "east" }, null)</li>
                            <li>@Html.ActionLink("West", "RFilter", "CafeDetails", new { chosen = "west" }, null)</li>
                            <li>@Html.ActionLink("Central", "RFilter", "CafeDetails", new { chosen = "central" }, null)</li>
                        </ul>
                    </li>
                    <li>
                        <div class="form-search search-only add-10px-margin">
                            <i class="search-icon glyphicon glyphicon-search"></i>
                            @using (Html.BeginForm("Search", "CafeDetails", FormMethod.Get))
                            {
                            @Html.TextBox("searchInput", null, new { @class = "form-control", @placeholder = "Search for a cafe.." })
                            }
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
            <hr />
        </div>
    </div>
    >
    <div class="container body-content no-top-margin">
        <div class="container col-md-12">
            <div class="col-md-9">
                @RenderBody()   <!-- PAGE CONTENT HERE-->
            </div>
            <div class="hidden-xs hidden-sm">
                @{Html.RenderAction("_PopularSearches", "Search"); }    <!-- i not sure if i have to split to folder -->
            </div>
        </div>
        <hr />
        <footer>
            <h6>ABOUT CAFE WITH L💗VE</h6>
            <div class="footer-border">
                <span class="pull-left">
                    Copyright&copy; @DateTime.Now.Year - CAFE WITH L💗VE
                </span>
                <span class="pull-right col-md-3 col-sm-12 col-xs-12">
                    <a href="#" class="col-md-offset-2 col-md-4">Help</a>
                    <a href="#" class="col-md-6">Contact Us</a>
                </span>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>